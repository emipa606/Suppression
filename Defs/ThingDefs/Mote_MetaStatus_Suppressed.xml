<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Mote visual for suppression. Fast flashing stars for a dazed effect. -->
  <ThingDef ParentName="MoteBase">
    <defName>Mote_SuppressedStars</defName>
    <description>a</description>
    <graphicData>
      <texPath>Things/Mote/SparkFlash</texPath>
      <shaderType>MoteGlow</shaderType>
    </graphicData>
    <thingClass>MoteThrownAttached</thingClass>
    <!-- Follows pawn. Seems to break position offset when removed -->
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <mote>
      <fadeInTime>0.05</fadeInTime>
      <solidTime>0.1</solidTime>
      <fadeOutTime>0.15</fadeOutTime>
      <attachedDrawOffset>(0.0, 0, 0.8)</attachedDrawOffset>
      <!-- Aiming for neck? -->
    </mote>
  </ThingDef>
</Defs>
